{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@ui/*": ["./src/components/UI/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@assets/*": ["./src/assets/*"]
    }
  }
}
