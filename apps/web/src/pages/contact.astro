---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/UI/Footer.astro";
import clock from "../assets/icons/clock.svg";
import mail from "../assets/icons/mail.svg";
import phone from "../assets/icons/phone-call.svg";
import pin from "../assets/icons/marker-pin.svg";
---

<Layout>
  <section
    class="relative overflow-hidden bg-linear-to-r from-green-600 via-green-500 to-yellow-500 text-white py-20"
  >
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-10 left-10 w-32 h-32 bg-white rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-40 h-40 bg-white rounded-full animate-pulse delay-75"
      >
      </div>
      <div
        class="absolute top-1/2 left-1/3 w-24 h-24 bg-white rounded-full animate-pulse delay-150"
      >
      </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 text-center relative z-10">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 animate-fade-in">
        ¡Estamos aquí para ti!
      </h1>
      <p class="text-xl md:text-2xl opacity-90 animate-fade-in-delay">
        Tu satisfacción es nuestra prioridad. Contáctanos hoy mismo.
      </p>
    </div>
  </section>
  {/* Contact Info Cards */}
  <section class="max-w-7xl mx-auto px-4 -mt-16 mb-16 relative z-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div
        class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 hover:-translate-y-2 transition-all duration-300 cursor-pointer group"
        style={{
          animation: `slideUp 0.6s ease-out 2s both`,
        }}
      >
        <div
          class={`w-16 h-16 bg-linear-to-br  rounded-xl flex items-center justify-center mb-4 group-hover:rotate-12 transition-transform duration-300`}
        >
          <img
            src={phone.src}
            alt="Flecha derecha"
            class="w-8 h-8 text-white"
          />
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">{"Teléfono"}</h3>
        <p class="text-gray-700 font-semibold mb-1">{"+593 4 123 4567"}</p>
        <p class="text-sm text-gray-500">{"Lun - Sáb: 8:00 AM - 8:00 PM"}</p>
      </div>
      <div
        class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 hover:-translate-y-2 transition-all duration-300 cursor-pointer group"
        style={{
          animation: `slideUp 0.6s ease-out 2s both`,
        }}
      >
        <div
          class={`w-16 h-16 bg-linear-to-br  rounded-xl flex items-center justify-center mb-4 group-hover:rotate-12 transition-transform duration-300`}
        >
          <img src={mail.src} alt="Flecha derecha" class="w-8 h-8 text-white" />
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">{"Email"}</h3>
        <p class="text-gray-700 font-semibold mb-1">{"info@mariquita.com"}</p>
        <p class="text-sm text-gray-500">{"Respuesta en 24 horas"}</p>
      </div>
      <div
        class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 hover:-translate-y-2 transition-all duration-300 cursor-pointer group"
        style={{
          animation: `slideUp 0.6s ease-out 2s both`,
        }}
      >
        <div
          class={`w-16 h-16 bg-linear-to-br  rounded-xl flex items-center justify-center mb-4 group-hover:rotate-12 transition-transform duration-300`}
        >
          <img src={pin.src} alt="Flecha derecha" class="w-8 h-8 text-white" />
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">{"Dirección"}</h3>
        <p class="text-gray-700 font-semibold mb-1">{"Guayaquil, Ecuador"}</p>
        <p class="text-sm text-gray-500">{"Av. Principal 123"}</p>
      </div>
      <div
        class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 hover:-translate-y-2 transition-all duration-300 cursor-pointer group"
        style={{
          animation: `slideUp 0.6s ease-out 2s both`,
        }}
      >
        <div
          class={`w-16 h-16 bg-linear-to-br  rounded-xl flex items-center justify-center mb-4 group-hover:rotate-12 transition-transform duration-300`}
        >
