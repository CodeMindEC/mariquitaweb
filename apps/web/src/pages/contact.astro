  <section class="max-w-7xl mx-auto px-4 pb-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {/* Contact Form */}
      <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-10">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">
          Envíanos un mensaje
