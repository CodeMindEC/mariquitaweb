            <input
              type="text"
              name="nombre"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-500 focus:outline-none transition-all duration-300"
              placeholder="Nombre completo"
            />
            <div
              class={`absolute bottom-0 left-0 h-0.5 bg-linear-to-r from-green-500 to-yellow-500 transition-all duration-300 `}
            >
            </div>
          </div>

          <div class="relative">
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-500 focus:outline-none transition-all duration-300"
              placeholder="Correo electrónico"
            />
            <div
              class={`absolute bottom-0 left-0 h-0.5 bg-linear-to-r from-green-500 to-yellow-500 transition-all duration-300 `}
            >
            </div>
          </div>

          <div class="relative">
            <input
              type="tel"
              name="telefono"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-500 focus:outline-none transition-all duration-300"
              placeholder="Teléfono (opcional)"
            />
            <div
              class={`absolute bottom-0 left-0 h-0.5 bg-linear-to-r from-green-500 to-yellow-500 transition-all duration-300 `}
            >
            </div>
          </div>

          <div class="relative">
            <input
              type="text"
              name="asunto"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-500 focus:outline-none transition-all duration-300"
              placeholder="Asunto"
            />
            <div
              class={`absolute bottom-0 left-0 h-0.5 bg-linear-to-r from-green-500 to-yellow-500 transition-all duration-300 `}
            >
            </div>
          </div>

          <div class="relative">
            <textarea
              name="mensaje"
              required
              rows="5"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-500 focus:outline-none transition-all duration-300 resize-none"
