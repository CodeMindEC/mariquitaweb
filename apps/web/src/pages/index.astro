---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/UI/Hero.astro";
import FeaturedCollections from "../components/UI/featured-collections/FeaturedCollections.astro";
import Footer from "../components/UI/Footer.astro";
import { listCollections } from "../lib/medusajs/products";

const collectionsResponse = await listCollections({ limit: 8 });
const collections = collectionsResponse.collections ?? [];
---

<Layout collections={collections}>
    <Hero />

    <FeaturedCollections collections={collections} sectionsLimit={4} productsPerSection={8} />

    <Footer />
</Layout>
