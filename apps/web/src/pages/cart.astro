---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/UI/Footer.astro";
import CartListIsland from "../components/UI/cart/CartListIsland.tsx";
import CartSummary from "@ui/cart/CartSummary.tsx";
---

<Layout>
    <main class="max-w-7xl mx-auto px-2 sm:px-4 py-6 sm:py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-8">
            <!-- Lista -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-4 sm:p-6">
                    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Tu Carrito</h2>

                    <CartListIsland client:only="react" />

                    <div class="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-gray-200">
                        <a href="/catalog" class="text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-2 text-sm sm:text-base">
                            <span>←</span> Continuar comprando
                        </a>
                    </div>
                </div>
            </div>

            <!-- Totales -->
            <div class="lg:col-span-1 mt-4 lg:mt-0">
                <div id="cart-summary-title-anchor"></div>
                <CartSummary client:only="react" />
            </div>
        </div>
    </main>

    <Footer />

    <!-- Botón flotante solo en móvil/tablet para ir al final -->
    <button type="button" aria-label="Ir al resumen" class="fixed bottom-6 right-6 z-50 flex items-center justify-center w-12 h-12 rounded-full bg-emerald-600 text-white shadow-lg transition hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:ring-offset-2 md:hidden" style="display: none;" id="scrollToSummaryBtn">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
        </svg>
    </button>

    <script>
        // Mostrar el botón solo en móvil/tablet
        const btn = document.getElementById("scrollToSummaryBtn") as HTMLButtonElement | null;
        if (btn) {
            function checkBtnVisibility() {
                if (btn && window.innerWidth < 1024) {
                    btn.style.display = "flex";
                } else if (btn) {
                    btn.style.display = "none";
                }
            }
            checkBtnVisibility();
            window.addEventListener("resize", checkBtnVisibility);
            btn.addEventListener("click", () => {
                const anchor = document.getElementById("cart-summary-title-anchor");
                // Ajusta este valor según la altura real de tu header fijo
                const headerHeight = 300; // px, ajusta si tu header es más alto o bajo
                if (anchor) {
                    const rect = anchor.getBoundingClientRect();
                    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                    const offset = rect.top + scrollTop - headerHeight - 8; // 8px extra de margen
                    window.scrollTo({ top: offset, behavior: "smooth" });
                }
            });
        }
    </script>
</Layout>
