---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/UI/Footer.astro";
import CartListIsland from "../components/UI/cart/CartListIsland.tsx";
import CartSummary from "@ui/cart/CartSummary.tsx";
---

<Layout>
    <main class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Lista -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Tu Carrito</h2>

                    <CartListIsland client:visible />

                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <a href="/productos" class="text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-2">
                            <span>‚Üê</span> Continuar comprando
                        </a>
                    </div>
                </div>
            </div>

            <!-- Totales -->
            <div class="lg:col-span-1">
                <CartSummary client:visible />
            </div>
        </div>
    </main>

    <Footer />
</Layout>
